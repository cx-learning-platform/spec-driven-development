# API ENDPOINTS
# =============================================================================

# GitHub API Configuration
GITHUB_API_BASE_URL=
GITHUB_REPO_OWNER=
GITHUB_REPO_NAME=

# Feedback Service Endpoints
FEEDBACK_INTERNAL_ENDPOINT=
